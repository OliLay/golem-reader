<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:id="@+id/comment_overview_card_view">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- COMMENT HEADING -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/comment_heading"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/comment_answer_count"
            android:textSize="15sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1" />

        <!-- COMMENT ANSWER COUNT -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/comment_answer_count"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="7dp" />

        <!-- COMMENT ICON DATE -->
        <ImageView
            android:id="@+id/comment_icon_date"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@+id/comment_heading"
            android:layout_marginTop="7dp"
            android:contentDescription="@string/image_description"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_date" />

        <!-- COMMENT TEXT DATE -->
        <TextView
            android:id="@+id/comment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comment_heading"
            android:layout_marginTop="6dp"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@+id/comment_icon_date"
            android:textSize="12sp" />

        <!-- COMMENT TEXT TIME -->
        <TextView
            android:id="@+id/comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comment_heading"
            android:layout_marginTop="6dp"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@+id/comment_date"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/comment_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comment_heading"
            android:layout_marginTop="6dp"
            android:layout_marginStart="4dp"
            android:layout_alignParentEnd="true"
            android:textSize="12sp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>