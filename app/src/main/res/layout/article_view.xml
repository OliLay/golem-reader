<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:id="@+id/overview_card_view">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- ARTICLE PHOTO -->
        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:scaleType="centerCrop"
            android:id="@+id/article_photo"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/image_description"
            />

        <!-- ARTICLE ICON DATE -->
        <ImageView
            android:id="@+id/article_icon_date"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@+id/article_photo"
            android:layout_marginTop="7dp"
            android:contentDescription="@string/image_description"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_date" />

        <!-- ARTICLE TEXT DATE -->
        <TextView
            android:id="@+id/article_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/article_photo"
            android:layout_marginTop="6dp"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@+id/article_icon_date"
            android:textSize="12sp" />

        <!-- ARTICLE TEXT TIME -->
        <TextView
            android:id="@+id/article_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/article_date"
            android:layout_marginTop="3dp"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@+id/article_icon_date"
            android:textSize="12sp" />

        <!-- ARTICLE ICON COMMENT -->
        <ImageView
            android:id="@+id/article_icon_comment"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@+id/article_time"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/image_description"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_comment" />

        <!-- ARTICLE TEXT COMMENT -->
        <TextView
            android:id="@+id/article_text_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/article_time"
            android:layout_marginTop="3dp"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@+id/article_icon_comment"
            android:textSize="12sp" />

        <!-- ARTICLE HEADING -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/article_heading"
            android:layout_toEndOf="@+id/article_photo"
            android:layout_alignParentTop="true"
            android:textSize="15sp"
            android:textStyle="bold"
            />

        <!-- ARTICLE DESCRIPTION -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/article_description"
            android:layout_toEndOf="@+id/article_photo"
            android:layout_below="@+id/article_heading"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>